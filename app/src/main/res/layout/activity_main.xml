            app:layout_constraintBottom_toTopOf="@+id/COMPRA3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView3"
            app:layout_constraintTop_toBottomOf="@+id/COMPRA2" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="55dp"
            android:layout_height="19dp"
            android:layout_marginTop="5dp"
            android:text="R$:12,99"
            app:layout_constraintBottom_toTopOf="@+id/COMPRA1"
            app:layout_constraintEnd_toEndOf="@+id/TEXT1"
            app:layout_constraintHorizontal_bias="0.633"
            app:layout_constraintStart_toEndOf="@+id/KITCANUDO"
